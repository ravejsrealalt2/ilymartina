<script>
  function confirmNo() {
    document.querySelector('.yes').style.transform = "scale(1.2)";
    document.querySelector('.no').innerText = "Are you sure?";
    document.querySelector('.no').onclick = function() {
      alert("Oh no! That's sad.");
    };
  }

  function showLove() {
    window.open('', '_blank').document.write('<div style="text-align: center; font-weight: bold; color: black;">I love you too martina</div><img src="https://x0.at/-VwW.png" alt="First Image"><img src="https://x0.at/gpXI.png" alt="Second Image">');
  }
</script>
